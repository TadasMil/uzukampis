---
interface Props {
  targetDate: string; // ISO date string
}
const { targetDate } = Astro.props;
---

<div class="countdown-overlay">
  <div class="countdown-container">
    <div class="countdown-label">UÅ¾kampis po..</div>
    <div class="countdown-timer" data-target={targetDate}>
      <div class="days-line"><span class="days">0</span> dienos</div>
      <div class="time-line"><span class="hours">00</span>:<span class="minutes">00</span>:<span class="seconds">00</span></div>
    </div>
  </div>
</div>

<script>
  const timerElement = document.querySelector('.countdown-timer');
  const targetDate = new Date(timerElement.dataset.target);

  function updateCountdown() {
    const now = new Date();
    const diff = targetDate - now;

    if (diff <= 0) {
      // Countdown finished
      document.querySelector('.days').textContent = '0';
      document.querySelector('.hours').textContent = '00';
      document.querySelector('.minutes').textContent = '00';
      document.querySelector('.seconds').textContent = '00';
      return;
    }

    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((diff % (1000 * 60)) / 1000);

    document.querySelector('.days').textContent = String(days);
    document.querySelector('.hours').textContent = String(hours).padStart(2, '0');
    document.querySelector('.minutes').textContent = String(minutes).padStart(2, '0');
    document.querySelector('.seconds').textContent = String(seconds).padStart(2, '0');
  }

  // Update immediately and then every second
  updateCountdown();
  setInterval(updateCountdown, 1000);
</script>

<style>
  .countdown-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 20;
  }

  .countdown-container {
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(8px);
    padding: 30px 50px;
    border-radius: 20px;
    text-align: center;
  }

  .countdown-label {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 15px;
    color: white;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
  }

  .countdown-timer {
    font-family: 'Courier New', monospace;
    font-weight: bold;
    color: white;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 5px;
  }

  .days-line {
    font-size: 3rem;
    letter-spacing: 0.05em;
  }

  .time-line {
    font-size: 3.5rem;
    letter-spacing: 0.1em;
  }

  @media (max-width: 768px) {
    .countdown-container {
      padding: 20px 30px;
    }

    .countdown-label {
      font-size: 1.2rem;
      margin-bottom: 10px;
    }

    .days-line {
      font-size: 1.5rem;
    }

    .time-line {
      font-size: 1.8rem;
    }
  }
</style>
